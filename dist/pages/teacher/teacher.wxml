
    <view class="flex bg-white align-center padding">
        <button class="cu-btn bg-blue round shadow flex-sub" bindtap="onClickCreateTeacher">
            添加教师账号
        </button>
        <view class="padding flex-sub text-center text-black text-lg text-bold">
            教师列表
        </view>
        <view class="padding flex-sub text-right">

        </view>
    </view>
    <view class="cu-bar search bg-white">
        <view class="search-form round">
            <text class="cuIcon-search"/>
            <input type="text" placeholder="搜索名字" confirm-type="search" bindinput="inputChangeSearch"/>
        </view>
        <!-- <view class="action">
            <button class="cu-btn bg-green shadow-blur round">搜索</button>
        </view> -->
    </view>

    <view class="justify-between flex bg-white">
        <scroll-view class="bg-white nav" scroll-x scroll-with-animation="scroll-with-animation">
            <view class="cu-item {{index==activeTab?'text-orange cur':''}}"  wx:for="{{tabbar}}" wx:key="wx:key" wx:for-item="item" bindtap="tabSelect" data-id="{{index}}">
                {{item}}
            </view>
        </scroll-view>
    </view>

    <view class="flex bg-white">
        <view style="margin-left:140rpx"/>
        <view class="cu-item flex-sub {{index==fieldCur?'text-orange':''}} align-center flex justify-center"  wx:for="{{teacherField}}" wx:key="wx:key" wx:for-item="item" bindtap="tabSelectIndex" data-id="{{index}}" data-name="subject">
            <view>{{item}}</view>
            
            <image wx:if="{{index!=1}}" style="width:30rpx;height:30rpx" src="{{sortImg[index]}}"/>
        </view>
            
    </view>

    <view  wx:for="{{teacherList}}" wx:key="index" wx:for-item="teacher" data-id="{{index}}" bindtap="onClickTeacher">
        <view class="bg-white flex solid-bottom align-center">
            <image style="width:60rpx;height:60rpx" class="margin margin-left-lg" src="{{imgUrl + teacher.Ticon}}">
            </image>

            <view class="flex-sub text-center">{{teacher.Tnickname}}</view>
            <view class="flex-sub text-center">
                <view wx:for="{{teacher.Cnames}}" wx:key="cindex" wx:for-item="cname">
                    {{cname}}
                </view>
                
            </view>
        </view>
    </view>