
<form bindsubmit="formSubmit">
    <view class="flex bg-white align-center padding">
        <view class="padding flex-sub text-center text-black text-lg text-bold">
            添加教师账号
        </view>
    </view>
	<view class="cu-form-group">
		<view class="title">用户名</view>
		<input name="Tname" placeholder="请输入登录账号"/>
	</view>

	<view class="cu-form-group">
		<view class="title">昵称</view>
		<input name="Tnickname" placeholder="请输入昵称(可使用姓名)"/>
	</view>

    <view class="cu-form-group">
		<view class="title">密码</view>
		<input name="Tpassword" password placeholder="请输入密码"/>
	</view>

    <view class="cu-form-group">
		<view class="title">确认密码</view>
		<input name="TpasswordAgain" password placeholder="请再次输入密码"/>
	</view>

    <view class="cu-form-group">
		<view class="title">手机号码</view>
		<input name="Tphone" type="number" placeholder="请输入手机号"/>
	</view>

    <view class="cu-bar bg-white" style="border-top:1rpx solid #eee;">
		<view class="action">
			头像
		</view>
		<view class="action">
			{{imgList.length}}/1
		</view>
	</view>

    <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
            <view class="bg-img"  wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
                <image src="{{imgList[index]}}" mode="aspectFill"/>
                <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
                    <text class="cuIcon-close"/>
                </view>
            </view>
            <view class="solids" bindtap="ChooseImage"  wx:if="{{imgList.length<1}}">
                <text class="cuIcon-cameraadd"/>
            </view>
        </view>
	</view>


    <view class="padding flex justify-center bg-white">
        <button class="cu-btn bg-green shadow lg" form-type="submit">添加教师</button>
    </view>
</form>